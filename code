import turtle
t = turtle.Turtle()
s = turtle.getscreen()
t.pencolor("purple")
t.fillcolor("yellow")
t.pensize(10)
t.speed(1)
t.begin_fill()
t.circle(100)
t.penup()
t.fd(200)
t.pendown()
t.dot(20, "red")
t.end_fill()
t.penup()
t.bk(500)
t.pendown()
t.begin_fill()
t.fd(100)
t.lt(120)
t.fd(100)
t.lt(120)
t.fd(100)
t.lt(120)
t.end_fill()
